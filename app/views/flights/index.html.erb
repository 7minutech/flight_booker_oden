<%= form_with method: :get do |form| %>
  <%= form.label :departure_airport_id, "Departure Airport:" %>
  <%= form.select(:departure_airport_id, @departure_airports) %>
  <br><br>
  <%= form.label :arrival_airport_id, "Arrival Airport:" %>
  <%= form.select(:arrival_airport_id, @arrival_airports) %>
  <br><br>
  <%= form.label :ticket_num, "Passenger Number:" %>
  <%= form.select(:ticket_num, @passenger_numbers) %>
  <br><br>
  <%= form.label :flight_date, "Flight Date:" %>
  <%= form.select(:flight_date, @flight_dates) %>
  <br><br>
  <%= form.submit "Search" %>
<% end %>
<% @available_flights.each do |flight| %>
  <p>From: <%= flight.departure_airport.code %></p>
  <p>To: <%= flight.arrival_airport.code %></p>
  <p>At: <%= flight.start_timestamp %></p>
<% end %>
